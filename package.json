{
  "name": "CBV-API",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:CBV-Confederacao-Brasileira-de-Voleibol/CBV-API.git",
  "author": "Msouza <msdsantos96@gmail.com>",
  "license": "MIT",
  "scripts": {
    "test": "jest",
    "dev": "tsnd -r tsconfig-paths/register --transpile-only --inspect --ignore-watch node_modules src/shared/infra/http/server.ts",
    "build": "babel src --extensions \".js,.ts\" --out-dir dist --copy-files",
    "start": "node src/shared/infra/http/server.ts",
    "typeorm": "tsnd -r tsconfig-paths/register node_modules/typeorm/cli",
    "db:migrate": "typeorm migration:run",
    "db:revert": "typeorm migration:revert"
  },
  "dependencies": {
    "express": "^4.18.1",
    "typeorm": "^0.3.6"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.6.4"
  }
}
